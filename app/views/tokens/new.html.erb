<h1 class="text-xl text-center text-gray-600">Generate API Token</h1>


<div class="px-3 py-5">

  <div role="alert" class="mb-6">
    <div class="bg-yellow-200 text-black font-semibold rounded-t px-4 py-2">
      Note
    </div>
    <div class="border border-t-0 border-yellow-300 rounded-b bg-yellow-100 px-4 py-3 text-black">
      <p>A generated token will appear in the flash message below. Take care to copy it in time. You will not be able to see it again</p>
    </div>
  </div>

<%= form_with url: tokens_path, method: :post do |form| %>

  <div class="md:flex mt-3 px-4 w-full">
      <div class="md:w-1/3">
          <%= form.label :user, class: "block text-gray-600 uppercase text-xs font-semibold mb-2 required-label" %>
      </div>
      <div class="md:w-2/3 w-full">
      <%= form.select :user_id, options_from_collection_for_select(@users, :id, :displayname), {include_hidden: false, include_blank: true}, 
                      { data: {controller: 'slim', slim_options: { showSearch: true, placeholderText: '' }.to_json}} %>
      </div>
  </div>

  <div class="flex flex-wrap">
    <div class="w-full lg:w-12/12 px-4 py-3">
      <div class="flex justify-end">
        <div class="flex flex-col lg:flex-row lg:items-center">
          <%= form.submit "Submit", class: "px-3 py-1 text-xs font-medium text-center text-white bg-blue-700 rounded-sm hover:bg-blue-800 w-20 h-6" %>
        </div>
      </div>
    </div>
  </div>

<% end %>
</div>
